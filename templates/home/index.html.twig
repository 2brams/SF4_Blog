{% extends 'base.html.twig' %}

{% block title %}
{{parent()}}Accueil
{% endblock %}

{% block body %}

<!-- hero area -->
<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 align-self-end">
                <h1 class="mb-0">Welcome</h1>
                <h2 class="mb-100 title-border-lg">to
                    <i>Jhon Abraham Blog</i>
                </h2>
                <p class="mb-80 mr-5">
                    Iâ€™m a Freelance Interactive Art Director based in
                    France. Focusing across branding and identity, digital
                    and print.
                </p>
                <span class="font-secondary text-dark mr-3 mr-sm-5">Follow</span>
                <ul class="list-inline d-inline-block mb-5">
                    <li class="list-inline-item mx-3">
                        <a href="#" class="text-dark">
                            <i class="ti-facebook"></i>
                        </a>
                    </li>
                    <li class="list-inline-item mx-3">
                        <a href="#" class="text-dark">
                            <i class="ti-twitter-alt"></i>
                        </a>
                    </li>
                    <li class="list-inline-item mx-3">
                        <a href="#" class="text-dark">
                            <i class="ti-linkedin"></i>
                        </a>
                    </li>
                    <li class="list-inline-item mx-3">
                        <a href="#" class="text-dark">
                            <i class="ti-github"></i>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="col-lg-6 text-right">
                <img class="img-fluid" src="images/banner-img.png" alt="banner-image">
            </div>
        </div>
    </div>
</section>
<!-- /hero area -->


<section class="section">
    <div class="container">
        <div class="row">
            {% for post in posts  %}
            <div class="col-12 mb-100">
                <article data-file="articles/b.html" data-target="article" class="article-full-width
        {% if loop.index%2==0 %} article-right {% endif %} ">
                    <div class="post-image">
                        <img class="img-fluid" src="{{post.image}}" alt="post-thumb">
                        <!-- <img class="img-fluid" src="{{asset('uploads/'~ post.image)}}" alt="post-thumb"> -->
                    </div>
                    <div class="post-content">
                        <ul class="list-inline d-flex justify-content-between border-bottom post-meta pb-2 mb-4">
                            <li class="list-inline-item">
                                <i class="ti-calendar mr-2"></i>
                                {{post.createdAt|date("d M , Y")}}
                            </li>
                            <li class="list-inline-item">
                                <i class="ti-alarm-clock mr-2"></i>
                                <span class="eta">8 min</span>
                                read
                            </li>
                        </ul>
                        <h4 class="mb-2">
                            <a href="{{path("post.show",{id:post.id})}}" class="text-dark">
                                {{post.title}}
                            </a>
                        </h4>
                        <li class="list-inline-item mb-4">
                            <span class="font-weight-bold">Last update:</span>
                            {{post.updatedAt|date(" d M , Y H:i")}}
                        </li>
                        <p class="mb-0 post-summary text-justify">
                            {{post.description|striptags|truncate(300, true)}}
                        </p>
                        <a class="btn btn-transparent mb-4" href="{{path("post.show",{id:post.id})}}">Continue...</a>
                        <div class="author">
                            <span class="d-block">Post by</span>
                            <p>Jhon Abraham</p>
                        </div>
                    </div>
                </article>
            </div>
            {% endfor %}
        </div>
        <div class="row">
            <div class="col-12">
                {{ knp_pagination_render(posts) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}