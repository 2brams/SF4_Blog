{% extends 'base.html.twig' %}

{% block title %}Hello PostController!
{% endblock %}

{% block body %}
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Images</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for post in posts %}
        <tr>
          <td scope="row">
            {{post.title}}
          </td>
          <td>
            {{post.description}}
          </td>
          <td>
            {{post.image}}
          </td>
          <td>
            <a class="btn btn-primary" href="{{path("post.edit",{id:post.id})}}">Edit</a>
            <a class="btn btn-primary" href="{{path("post.show",{id:post.id})}}">Show</a>
            <form method="post" action="{{path('post.delete',{id:post.id})}}" style="display:inline-block" onsubmit="return confirm('Etes vous vraiment sur?')">
              <input name="_method" type="hidden" value="DELETE">
              <input type="hidden" name="_token" value="{{csrf_token('delete'~ post.id)}}">
              <button class="btn  btn-danger btn-circle">
               delete
              </button>
            </form>
          </td>
        </tr>
      {% endfor %}

    </tbody>
  </table>
{% endblock %}
